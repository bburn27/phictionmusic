---

<Separator />
<footer>
  <!-- Left Icons -->
  <div class="footer-icons">
    <a href="https://open.spotify.com/artist/7ASmfdcTILYpuvra3EYPZv" target="_blank" aria-label="Spotify"><i class="fab fa-spotify"></i></a>
    <a href="https://soundcloud.com/phctn" target="_blank" aria-label="SoundCloud"><i class="fab fa-soundcloud"></i></a>
    <a href="https://music.apple.com/us/artist/phiction/1568969784" target="_blank" aria-label="Apple Music"><i class="fab fa-apple"></i></a>
    <a href="https://youtube.com/phctn" target="_blank" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
  </div>

  <!-- Center Text -->
  <p class="footer-text-copyright">
    Â© 2025 PHICTION - 
    <a href="/phiction">About</a>
  </p>

  <!-- Right Icons -->
  <div class="footer-icons">
    <a href="https://instagram.com/phctn" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
    <a href="https://twitter.com/phctn" target="_blank" aria-label="Twitter"><i class="fab fa-x-twitter"></i></a>
    <a href="https://facebook.com/phictionmusic" target="_blank" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
    <a href="https://tiktok.com/@phctn_" target="_blank" aria-label="TikTok"><i class="fab fa-tiktok"></i></a>
  </div>
</footer>

<style>
  footer {
    display: flex;
    justify-content: space-between; /* Spread out left, center, right */
    align-items: center;
    padding: 1rem 2rem;
    width: 100%;
    height: 10dvh;
    position: fixed;
    bottom: 0;
    left: 0;
    background: var(--color-bg);
    width: 100%;
    z-index: 100;

  }

  .footer-icons {
    display: flex;
    gap: 1.5rem; /* Space between icons */
  }

  .footer-icons a {
    font-size: 2.5rem; /* Adjust icon size */
    transition: colors 0.3s ease-in-out;
  }

  p {
    margin: 0;
    font-weight: bold;
    line-height: 1.4;
    text-align: center;
  }

  p a:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 768px) {
    footer {
      justify-content: center;
      gap: 1.5rem;
    }

    .footer-icons a {
      font-size: 1.5rem;
    }
  }

  @media screen and (max-width: 600px) {
    .footer-text-copyright {
      display: none;
    }
  }

  @media screen and (max-width: 480px) {
    .footer-icons a {
      font-size: 1rem;
    }
  }

  @media screen and (max-width: 380px) {
    .footer-icons, footer {
      gap: 1rem;
    }
  }
</style>
