---
import TextSlider from "../components/TextSlider.astro";
import Separator from "../components/Separator.astro";

// Get the current pathname
const currentPath = Astro.url.pathname;
// Define a map of routes
const routes = {
  "/": "Home",
  "/releases/": "Releases",
  "/store/": "Store",
  "/shows/": "Shows",
  "/contact/": "Contact",
  "/phiction/": "Phiction",
};
// Determine the active route
const activeRoute = routes[currentPath] || null;

---

<header>
  <h1>
    <a href="/" 
      ><TextSlider content="PHICTION" /></a>
  </h1>
  <div class="desktop-nav">
    <ul>
      <li>
        <a
          href="/releases/"
          class={activeRoute === "Releases" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Releases" /></a>
      </li>
      <li>
        <a
          href="/shows/"
          class={activeRoute === "Shows" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Shows" /></a>
      </li>
      <li>
        <a
          href="https://wedidntplanet.square.site/s/shop"
          class={activeRoute === "Store" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Store" /></a>
      </li>
      <li>
        <a
          href="/contact/"
          class={activeRoute === "Contact" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Contact" /></a>
      </li>
    </ul>
  </div>
  <div class="nav-btn">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
  </div>

  <div class="mobile-nav">
    <ul>
      <li>
        <a href="/"
        class={activeRoute === "Home" ? "current" : ""}
        data-astro-prefetch><TextSlider content="Home" /
        ></a>
      </li>
      <li>
        <a
          href="/releases/"
          class={activeRoute === "Releases" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Releases" /></a>
      </li>
      <li>
        <a
          href="/shows/"
          class={activeRoute === "Shows" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Shows" /></a>
      </li>
      <li>
        <a
          href="https://wedidntplanet.square.site/s/shop"
          class={activeRoute === "Store" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Store" /></a>
      </li>
      <li>
        <a href="/phiction/"   
        class={activeRoute === "Phiction" ? "current" : ""}     
        data-astro-prefetch><TextSlider content="About" ></a>
      </li>
      <li>
        <a
          href="/contact/"
          class={activeRoute === "Contact" ? "current" : ""}
          data-astro-prefetch><TextSlider content="Contact" /></a>
      </li>
    </ul>
  </div>
</header>
<Separator />

<style>
  header {
    position: relative;
    font-weight: 700;
    padding: 1rem 2rem;
    gap: 0rem;
    align-items: center;
    display: flex;
    justify-content: space-between;
    height: 10dvh;
  }
  header a.current {
    pointer-events: none;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: inherit;
    margin: 0;
  }

  li {
    font-size: 1.2rem;
  }
  ul {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
    grid-column: auto / span 2;
    font-size: 1rem;
    justify-self: end;
  }

  .nav-btn {
    display: none;
  }

  .mobile-nav {
    display: none;
  }
  @media screen and (min-width: 50em) {
    header {
      grid-template-columns: 20vw 1fr auto auto;
    }
  }

  @media screen and (max-width: 600px) {
    header {
      padding: 1rem;
    }
    .nav-btn {
      display: flex;
      flex-direction: column;
      gap: 5px;
      z-index: 11;
    }

    .line {
      width: 30px;
      height: 3px;
      background: white;
      border-radius: 9999px;
      transition: all 0.3s ease;
    }

    .desktop-nav {
      display: none;
    }

    .mobile-nav {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: var(--color-bg);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: start;
      gap: 1rem;
      z-index: 10;
      max-width: 0;
      overflow: hidden;
      transition: max-width 0.3s ease;
    }

    .mobile-nav ul {
      display: flex;
      align-items: start;
      flex-direction: column;
      padding: 2rem;
      gap: 1rem;
    }

    .mobile-nav.active {
      max-width: 100vh;
      position: fixed;
    }

    .nav-btn.active .line:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .nav-btn.active .line:nth-child(2) {
      opacity: 0;
    }

    .nav-btn.active .line:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }

    h1 {
      z-index: 11;
    }

    .current {
      color: var(--color-link-hover);
    }
  }
  @media screen and (max-width: 480px) {
    li {
      font-size: 1rem;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const navBtn = document.querySelector(".nav-btn");
    const mobileNav = document.querySelector(".mobile-nav");
    
    navBtn?.addEventListener("click", () => {
      mobileNav?.classList.toggle("active");
      navBtn.classList.toggle("active");

      if (mobileNav.classList.contains("active")) {
        document.body.style.overflow = "hidden";
      } else {
        document.body.style.overflow = "auto";
      }
    });
  });
</script>
